{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Ref</th>
                <td>{{ article.ref }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ article.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ article.price }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ article.quantity }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ article.state }}</td>
            </tr>
            <tr>
                <th>Dateadded</th>
                <td>{{ article.dateadded ? article.dateadded|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Datemodification</th>
                <td>{{ article.datemodification ? article.datemodification|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_article_index') }}">back to list</a>

    <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
