{% extends 'base.html.twig' %}

{% block title %}Mes Articles{% endblock %}

{% block body %}

<div class="container">
    <h1>Mes Articles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ref</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>State</th>
                <th>Dateadded</th>
                <th>Datemodification</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.ref }}</td>
                <td>{{ article.name }}</td>
                <td>{{ article.price }}</td>
                <td>{{ article.quantity }}</td>
                <td>{{ article.state }}</td>
                <td>{{ article.dateadded ? article.dateadded|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.datemodification ? article.datemodification|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="text-dark" href="{{ path('app_article_show', {'id': article.id}) }}">Voir</a>
                    <a class="text-dark" href="{{ path('app_article_edit', {'id': article.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Vous n'avez pas encore d'article</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="text-dark" href="{{ path('app_article_new') }}">Ajouter un article</a>
</div>
{% endblock %}
